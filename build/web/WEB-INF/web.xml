<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserLogIn</servlet-name>
        <servlet-class>com.resume.HttpServlet.UserLogIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogOut</servlet-name>
        <servlet-class>com.resume.HttpServlet.UserLogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreResume</servlet-name>
        <servlet-class>com.resume.HttpServlet.StoreResume</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>SaveResume</servlet-name>
        <servlet-class>com.resume.HttpServlet.SaveResume</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLogIn</servlet-name>
        <url-pattern>/UserLogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogOut</servlet-name>
        <url-pattern>/UserLogOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreResume</servlet-name>
        <url-pattern>/StoreResume</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveResume</servlet-name>
        <url-pattern>/SaveResume</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
